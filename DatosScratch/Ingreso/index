    <p>Ingresa tu nombre para comenzar:</p>
    <input type="text" id="nombre" placeholder="Escribe tu nombre" required>
    <br>
    <button onclick="iniciarJuego()">Iniciar Juego</button>

    <script>
        function iniciarJuego() {
            let nombre = document.getElementById("nombre").value;

            if (nombre) {
                // Guardar el nombre del estudiante en localStorage
                localStorage.setItem("nombreEstudiante", nombre);

                // Redirigir al estudiante a la p√°gina del juego
                window.location.href = "https://cgviviana.github.io/Juego_Prueba/DatosScratch/Ingreso/juego.html"; // Cambiar por la URL correcta del juego
            } else {
                alert("Por favor ingresa tu nombre");
            }
        }
    </script>
